<%= bootstrap_form_for(@article, class: 'form') do |f| %>
  <%= f.text_field :title %>
  <%= f.select :categories, Category.all.collect { |c| [ c.name, c.id ] }, { class: "" } %>
  <%= f.text_field :url %>
  <%= f.text_area :content, data: { editor: 'markdown' }, rows: 10 %>
  <%= f.submit 'Save Article', :class => 'button' %>
<% end %>

